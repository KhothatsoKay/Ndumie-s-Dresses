@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport"
          content="width=device-width" />



</head>

<body>
    <div class="jumbotron">
        <h3 style="font-family:'Verdana'; font-size:x-large"> Your Cart Page</h3>
        <p style="font-family:'cursive';">Purchase by clicking on "Go To Checkout", or you can Continue Shopping!</p>
    </div>
    <div class="jumbotron">
        <table cellpadding="2" cellspacing="2" border="1" style="border-radius: 40px">
            <tr>
                <th>Option</th>
                <th>Id</th>
                <th>Name</th>
                <th>Photo</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Sub Total</th>
            </tr>

            @foreach (var item in ViewBag.cart)
            {

                <tr>
                    <td class="d-lg-table-cell" style="background-color:darkred">
                        <a asp-controller="cart" asp-action="remove" asp-route-id="@item.Product.Id">Remove</a>
                    </td>
                    <td class="d-lg-table-cell">@item.Product.Id</td>
                    <td class="d-lg-table-cell">@item.Product.Name</td>
                    <td class="d-lg-table-cell">
                        <img src="~/Images/@item.Product.Photo" width="100" />
                    </td>
                    <td class="d-lg-table-cell">R @item.Product.Price</td>
                    <td class="d-lg-table-cell">@item.Quantity</td>
                    <td class="d-lg-table-cell">R@(item.Product.Price * item.Quantity)</td>
                </tr>


            }

            <tr>
                <td align="right"
                    colspan="6" >
                    Sum
                </td>
                <td style="background-color:green">
               
                    R @ViewBag.total
                </td>
            </tr>
        </table>
        <br />
        <a asp-controller="product" asp-action="index">Continue Shopping</a>
        <a asp-controller="checkOut" asp-action="index" asp-route-id="">Go To Checkout</a>
    </div>
</body>
</html>